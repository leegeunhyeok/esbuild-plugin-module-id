{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "dist", ".yarn", ".pnp.*"]
}
